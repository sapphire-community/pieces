{
	"name": "@sapphire/pieces",
	"version": "1.0.0",
	"description": "Sapphire's piece loader.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"author": "@sapphire",
	"license": "MIT",
	"private": false,
	"scripts": {
		"prepublishOnly": "yarn build:cleanup && yarn build && yarn build:rollup && yarn build:pre-publish",
		"lint": "eslint src scripts --ext ts --fix",
		"format": "prettier --write {src,scripts}/**/*.ts",
		"docs": "typedoc",
		"update": "yarn upgrade-interactive --latest",
		"build": "tsc -b src && yarn build:mjs-import",
		"build:cleanup": "node scripts/clean-dist.mjs",
		"build:mjs-import": "node scripts/make-import.mjs",
		"build:rollup": "rollup -c rollup.config.ts",
		"build:pre-publish": "node scripts/pre-publish.mjs",
		"clean": "tsc -b src --clean",
		"watch": "tsc -b src -w",
		"sversion": "standard-version",
		"commit": "git-cz",
		"cz": "git-cz"
	},
	"dependencies": {
		"@discordjs/collection": "^0.1.6"
	},
	"devDependencies": {
		"@commitlint/cli": "^11.0.0",
		"@commitlint/config-conventional": "^11.0.0",
		"@sapphire/eslint-config": "^1.0.4",
		"@sapphire/ts-config": "^1.0.3",
		"@types/node": "^14.14.10",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^7.14.0",
		"eslint-config-prettier": "^7.0.0",
		"eslint-plugin-prettier": "^3.2.0",
		"husky": "^4.3.5",
		"lint-staged": "^10.5.2",
		"prettier": "^2.2.1",
		"pretty-quick": "^3.1.0",
		"rollup": "^2.33.3",
		"rollup-plugin-dts": "^2.0.1",
		"standard-version": "^9.0.0",
		"typedoc": "^0.19.2",
		"typedoc-plugin-nojekyll": "^1.0.1",
		"typescript": "^4.1.3"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sapphire-project/pieces.git"
	},
	"files": [
		"dist",
		"!dist/tsconfig.tsbuildinfo"
	],
	"engines": {
		"node": ">=12",
		"npm": ">=6"
	},
	"keywords": [
		"discordjs",
		"bot",
		"typescript",
		"ts",
		"yarn",
		"discord",
		"sapphire"
	],
	"bugs": {
		"url": "https://github.com/sapphire-project/pieces/issues"
	},
	"homepage": "https://sapphire-project.github.io/pieces",
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "yarn pretty-quick --staged && yarn lint-staged"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"resolutions": {
		"acorn": "^7.4.0",
		"minimist": "^1.2.5",
		"kind-of": "^6.0.3",
		"dot-prop": "^5.3.0"
	}
}
